<Window x:Class="OnlineStoreApp.CartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CartWindow" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <ItemsControl x:Name="CartItemsControl" Margin="10"/>
            <TextBlock x:Name="TotalPriceText" Margin="10" FontSize="16"/>
            <Button Content="Remove From Cart" Click="RemoveFromCart_Click" Margin="10"/>
            <Button Content="Checkout" Click="Checkout_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
