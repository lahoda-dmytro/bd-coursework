<Window x:Class="OnlineStoreApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="20">
            <TextBlock Text="Login" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
            <TextBox x:Name="UsernameTextBox" Width="200" Margin="0,0,0,5" />
            <PasswordBox x:Name="PasswordTextBox" Width="200" Margin="0,0,0,20" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Login as User" Width="200" Click="LoginAsUserButton_Click"/>
                <Button Content="Login as Admin" Width="200" Click="LoginAsAdminButton_Click" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
