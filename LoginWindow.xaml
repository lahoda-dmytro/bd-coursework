<Window x:Class="OnlineStoreApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox x:Name="UsernameTextBox" Width="200" Height="30" Margin="0,10,0,10" />
            <PasswordBox x:Name="PasswordTextBox" Width="200" Height="30" Margin="0,10,0,10"/>
            <Button Content="Login as User" Width="150" Height="30" Margin="0,10,0,10" Click="LoginAsUser_Click"/>
            <Button Content="Login as Admin" Width="150" Height="30" Margin="0,10,0,10" Click="LoginAsAdmin_Click"/>
        </StackPanel>
    </Grid>
</Window>
